<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
    <filter>
        <filter-name>index</filter-name>
        <filter-class>com.sun.jersey.spi.container.servlet.ServletContainer</filter-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>org.graphity.ldp.Application</param-value>
        </init-param>
	<init-param>
	    <param-name>com.sun.jersey.config.property.WebPageContentRegex</param-name>
	    <param-value>/static/.*</param-value>
	</init-param>
        <init-param>
            <param-name>org.graphity.ldp.ontology.path</param-name>
            <param-value>ontology/</param-value>
        </init-param>
        <init-param>
            <param-name>org.graphity.ldp.ontology.location</param-name>
            <param-value>org/graphity/ldp/vocabulary/graphity-ldp.ttl</param-value>
        </init-param>
	<!--
        <init-param>
            <param-name>org.graphity.ldp.ontology.uri</param-name>
            <param-value>http://ldp.graphity.org/ontology/</param-value>
        </init-param>
	-->
        <init-param>
            <param-name>org.graphity.ldp.ontology.endpoint</param-name>
            <param-value>http://dydra.com/graphity/ldp/sparql</param-value>
        </init-param>
    </filter>
   <filter-mapping>
      <filter-name>index</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
